<Window x:Class="MvvmLab.Single"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MvvmLab"
        mc:Ignorable="d"
        Title="Single" Height="206.15" Width="527.273">
	<Grid>
	    <!-- The updatesource trigger changes the label continuosuly. -->
		<TextBox HorizontalAlignment="Left" Height="23" Margin="117,52,0,0" TextWrapping="Wrap" Text="{Binding SeeOne, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
		<TextBox HorizontalAlignment="Left" Height="23" Margin="117,91,0,0" TextWrapping="Wrap" Text="{Binding SeeTwo, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
		<Label Content="{Binding SeeOne}" Height="40" VerticalAlignment="Top" />
	</Grid>
</Window>
